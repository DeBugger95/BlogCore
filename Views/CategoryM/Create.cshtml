@model BlogCore.Application.Dtos.CategoryDto
@{

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post GAdmin</title>
    <link type="text/css" href="~/GAdmin/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/GAdmin/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="~/GAdmin/css/theme.css" rel="stylesheet">
    <link type="text/css" href="~/GAdmin/css/font-awesome.css" rel="stylesheet">
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600'
          rel='stylesheet'>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a><a class="brand" href="/categorym">Category Manage</a>
                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <form class="navbar-search pull-right input-append" action="#">
                        <input type="text" class="span3">
                        <button class="btn" type="button">
                            <i class="icon-search"></i>
                        </button>
                    </form>
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>
    <!-- /navbar -->
    <div class="wrapper">
        <div class="container">
            <div class="row">
                @Html.Partial("GAdminMenu")
                <!--/.span3-->
                <div class="span9">
                    <div class="content">
                        <div class="module">
                            <div class="module-head">
                                <h3>
                                    Category DataTables => Create
                                    @Html.Partial("ErrorMessage")
                                </h3>
                            </div>
                            <div class="module-body table">
                                <form method="post" class="form-horizontal row-fluid">
                                    <div class="control-group">
                                        <label class="control-label" for="basicinput">分类名称</label>
                                        <div class="controls">
                                            <input type="text" asp-for="CategoryName" id="categoryName" placeholder="Category Name" class="span8" required>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">是否弃用</label>
                                        <div class="controls">
                                            <label class="radio inline">
                                                <input type="radio" asp-for="IsActive" name="IsActive" id="IsActiveTrue" value="true" checked>
                                                True
                                            </label>
                                            <label class="radio inline">
                                                <input type="radio" asp-for="IsActive" name="IsActive" id="IsActiveFalse" value="false">
                                                False
                                            </label>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="basicinput">优先级</label>
                                        <div class="controls">
                                            <select tabindex="1" data-placeholder="Select here.." class="span8" asp-for="SortNo">
                                                <option value="1" checked>1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <div class="controls">
                                            <button type="submit" class="btn btn-success">Submit</button>
                                            <button type="button" class="btn btn-danger" onclick="window.history.back()">Back</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!--/.module-->
                    </div>
                    <!--/.content-->
                </div>
                <!--/.span9-->
            </div>
        </div>
        <!--/.container-->
    </div>
    <!--/.wrapper-->
    <script src="~/GAdmin/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/GAdmin/js/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="~/GAdmin/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/GAdmin/js/jquery.flot.js" type="text/javascript"></script>
    <script src="~/GAdmin/js/jquery.flot.resize.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
</body>
</html>
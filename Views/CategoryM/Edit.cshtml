<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post GAdmin</title>
    <link type="text/css" href="~/GAdmin/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/GAdmin/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="~/GAdmin/css/theme.css" rel="stylesheet">
    <link type="text/css" href="~/GAdmin/css/font-awesome.css" rel="stylesheet">
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600'
          rel='stylesheet'>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a><a class="brand" href="/categorym">Category Manage</a>
                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <form class="navbar-search pull-right input-append" action="#">
                        <input type="text" class="span3">
                        <button class="btn" type="button">
                            <i class="icon-search"></i>
                        </button>
                    </form>
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>
    <!-- /navbar -->
    <div class="wrapper">
        <div class="container">
            <div class="row">
                @Html.Partial("GAdminMenu")
                <!--/.span3-->
                <div class="span9">
                    <div class="content">
                        <div class="module">
                            <div class="module-head">
                                <h3>
                                    Category DataTables
                                </h3>
                            </div>
                            <div class="module-body">
                                <div class="nav-collapse collapse navbar-inverse-collapse">
                                    <form class="pull-left input-append" action="#">
                                        <input type="text" class="span3" id="postSearch" placeholder="@((string)ViewData["SearchName"] == ""?"分类名搜索":ViewData["SearchName"])" style="text-align:center;">
                                        <button class="btn" id="sbtn" type="button">
                                            <i class="icon-search"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div class="module-body table">
                                <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display"
                                       style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                No.
                                            </th>
                                            <th>
                                                CategoryName
                                            </th>
                                            <th>
                                                CreateDate
                                            </th>
                                            <th>
                                                SortNo
                                            </th>
                                            <th>
                                                IsActive
                                            </th>
                                            <th>
                                                <button class="btn btn-mini btn-success">Add</button>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Categorys)
                                        {
                                            <tr class="gradeU" style="text-align:center">
                                                <td>
                                                    @item.Id
                                                </td>
                                                <td>
                                                    @item.CategoryName
                                                </td>
                                                <td>
                                                    @item.CreateDate
                                                </td>
                                                <td>
                                                    @item.SortNo
                                                </td>
                                                <td>
                                                    @item.IsActive
                                                </td>
                                                <td style="width:200px">
                                                    <button class="btn btn-mini btn-inverse">Edit</button>
                                                    <button class="btn btn-mini btn-danger">Delete</button>
                                                    <button class="btn btn-mini btn-info">@item.IsActive</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                @Html.Partial("Page")
                            </div>
                        </div>
                        <!--/.module-->
                    </div>
                    <!--/.content-->
                </div>
                <!--/.span9-->
            </div>
        </div>
        <!--/.container-->
    </div>
    <!--/.wrapper-->
    <script src="~/GAdmin/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/GAdmin/js/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="~/GAdmin/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/GAdmin/js/jquery.flot.js" type="text/javascript"></script>
    <script src="~/GAdmin/js/jquery.flot.resize.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#sbtn").click(function () {
                var search = $("#postSearch").val();
                if (search == "") {
                    window.location.href = "@ViewBag.PageUrl";
                }
                else {
                    window.location.href = "@ViewBag.PageUrl?Name=" + search;
                }
            });
        });
    </script>
</body>
</html>